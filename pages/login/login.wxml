<!--pages/login/login.wxml-->

<view class="container">
    <view class="wrapper">
        <view class="left-top-sign">LOGIN</view>
        <view class="welcome">
            欢迎回来！
        </view>
        <view class="input-content">
            <view class="input-item">
                <text class="tit">手机号</text>
                <input  type="text" placeholder="请输入手机号" id="phone" bindinput="handleInput"/>
            </view>
            <view class="input-item">
                <text class="tit">验证码</text>
                <input type="text"  placeholder="请输入验证码" id="captcha" bindinput="handleInput"/>
            </view>
        </view>
        <button class="confirm-btn" bindtap="sendCaptcha">点击获取验证码</button>
        <button class="confirm-btn" bindtap="login">登录</button>
        <view class="forget-section">
            忘记密码?
        </view>
    </view>
    <view class="register-section">
        还没有账号?
        <text >马上注册</text>
    </view>
</view>

